#!/usr/bin/env php

<?php

$files = array(
  __DIR__ . '/../../vendor/autoload.php',
  __DIR__ . '/../../../../../autoload.php'
);

foreach ($files as $file) {
  if (file_exists($file)) {
    require $file;
    break;
  }
}

date_default_timezone_set('Asia/Jakarta');

use Tolkien\Init;
use Tolkien\Facades\Tolkien;

switch($argv[1]) 
{
	case 'help':
		help();
		break;
	case 'init':
		$init = new Init($argv[2]);
		$init->create();
		break;
	case 'generate':
		Tolkien::generate($argv[2], $argv[3], $argv[4]);
		break;
	case 'compile':
		Tolkien::compile($argv[2]);
		break;
	case 'serve':
		Tolkien::serve($argv[2]);
		break;
	default:
		help();
		break;
}

function help()
{
		echo <<<EOT
================= Available Commands ===================\n
Initialize First
(php) (vendor\bin\)tolkien init [name]
\nGenerate Post
(php) (vendor\bin\)tolkien generate [name] [post, draft, page] [name]
\nGenerate Website
(php) (vendor\bin\)tolkien compile [name]
\nActivate Webserver
(php) (vendor\bin\)tolkien serve [name]
\n================= end ===================\n\n
EOT;
}